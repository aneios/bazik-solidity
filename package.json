{
	"name": "@bazikdefi/solidity",
	"version": "0.0.1",
	"license": "MIT",
	"types": "./typechain-types/index.ts",
	"files": [
		"abi",
		"artifacts",
		"contracts",
		"deployments",
		"exports",
		"typechain-types"
	],
	"author": "BazikDev",
	"repository": {
		"type": "git",
		"url": "https://github.com/bazikdefi/bazik-solidity.git"
	},
	"bugs": {
		"url": "https://github.com/bazikdefi/bazik-solidity/issues"
	},
	"homepage": "https://github.com/bazikdefi/bazik-solidity#readme",
	"description": "Core contracts for the BazikDeFi protocol",
	"keywords": [
		"DeFi",
		"UBI"
	],
	"scripts": {
		"build": "hardhat compile",
		"check": "hardhat check",
		"clean": "hardhat clean",
		"console": "hardhat console",
		"format": "prettier --write . !./coverage",
		"lint": "eslint --fix --ignore-path .gitignore .",
		"ethereum:deploy": "hardhat --network ethereum deploy",
		"ethereum:verify": "hardhat --network ethereum etherscan-verify --solc-input",
		"ethereum:export": "hardhat --network ethereum export --export exports/ethereum.json",
		"kovan:deploy": "hardhat --network kovan deploy",
		"kovan:export": "hardhat --network kovan export --export exports/kovan.json",
		"kovan:verify": "hardhat --network kovan etherscan-verify --solc-input",
		"moonbase:deploy": "hardhat --network moonbase deploy",
		"moonbase:export": "hardhat --network moonbase export --export exports/moonbase.json",
		"arbitrum:deploy": "hardhat --network arbitrum deploy",
		"arbitrum:export": "hardhat --network arbitrum export --export exports/arbitrum.json",
		"export": "hardhat export --export-all exports/deployments.json",
		"test": "hardhat test --verbose",
		"test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
		"test:gas": "cross-env REPORT_GAS=true hardhat test --verbose"
	},
	"devDependencies": {
		"@ethersproject/abi": "^5.6.3",
		"@ethersproject/bytes": "^5.6.1",
		"@ethersproject/hardware-wallets": "^5.6.1",
		"@ethersproject/providers": "^5.6.8",
		"@nomiclabs/hardhat-ethers": "^2.0.6",
		"@nomiclabs/hardhat-etherscan": "^3.1.0",
		"@nomiclabs/hardhat-solhint": "^2.0.1",
		"@nomiclabs/hardhat-waffle": "^2.0.3",
		"@openzeppelin/contracts": "^4.6.0",
		"@openzeppelin/contracts-upgradeable": "^4.6.0",
		"@openzeppelin/hardhat-defender": "^1.6.2",
		"@tenderly/hardhat-tenderly": "^1.0.15",
		"@typechain/ethers-v5": "^10.0.0",
		"@typechain/hardhat": "^6.0.0",
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"@types/node": "^17.0.41",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"chai": "^4.3.6",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"ethereum-waffle": "^3.4.4",
		"ethers": "^5.6.8",
		"hardhat": "^2.9.9",
		"hardhat-abi-exporter": "^2.9.0",
		"hardhat-deploy": "^0.11.10",
		"hardhat-deploy-ethers": "^0.3.0-beta.13",
		"hardhat-gas-reporter": "^1.0.8",
		"hardhat-preprocessor": "^0.1.4",
		"hardhat-spdx-license-identifier": "^2.0.3",
		"hardhat-watcher": "^2.3.0",
		"lodash": "^4.17.21",
		"prettier": "^2.6.2",
		"prettier-plugin-solidity": "^1.0.0-beta.19",
		"solidity-coverage": "^0.7.21",
		"ts-generator": "^0.1.1",
		"ts-node": "^10.8.1",
		"typechain": "^8.0.0",
		"typescript": "^4.7.3"
	}
}
